<table>
    <% for (const todo of todos) { %>
        <li>
          <a href="/todo/<%= todo.id %>"><%= todo.title %></a>
          - Priority: 
          <% if (todo.priority === 1) { %>
            Low
          <% } else if (todo.priority === 2) { %>
            Normal
          <% } else if (todo.priority === 3) { %>
            High
          <% } %>
          - <a href="/remove-todo/<%= todo.id %>">odebrat</a>
          - <a href="/toggle-todo/<%= todo.id %>"><%= todo.done ? 'hotovo' : 'nehotovo' %></a>
        </li>
      <% } %>
  </table>